{
    "compilerOptions": {
        "strictNullChecks": true,
        "noUncheckedIndexedAccess": true,
        "paths": {
            "app/*": ["./packages/app/*"],
            "@my/ui/*": ["./packages/ui/*"],
            "@my/lib/*": ["./packages/lib/*"]
        },
        "jsx": "react-jsx"
    },
    "extends": "./tsconfig.base",
    "exclude": [
        "**/node_modules",
        "**/dist",
        "**/types",
        "apps/next/out",
        "apps/next/.next",
        "apps/next/.tamagui"
    ]
}
